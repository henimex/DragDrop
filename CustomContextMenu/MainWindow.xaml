<Window x:Class="CustomContextMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomContextMenu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="RichTextBox" Height="200" Width="300">
            <RichTextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Copy" Command="Copy"></MenuItem>
                    <MenuItem Header="Cut" Command="Cut"></MenuItem>
                    <MenuItem Header="Paste" Command="Paste"></MenuItem>
                    <MenuItem Header="Test" Click="MenuItem_OnClick"></MenuItem>
                </ContextMenu>
            </RichTextBox.ContextMenu>

        </RichTextBox>
    </Grid>
</Window>
